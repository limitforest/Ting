<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
   android:layout_width="match_parent"
   android:layout_weight="1"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp" 
        >

        <ImageView
            android:id="@+id/division_line_left"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/line_button_division_vertical"
            android:visibility="gone"
             />

        <TextView
            android:id="@+id/title"
            style="@style/SmallTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tab_indicator_text_selector"
            android:layout_weight="1"
            android:gravity="top|center_horizontal" />

        <ImageView
            android:id="@+id/division_line_right"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/line_button_division_vertical"
            android:visibility="gone"
             />
    </LinearLayout>
	<View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_toRightOf="@id/division_line_left"
            android:layout_toLeftOf="@id/division_line_right"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/title"
            android:background="@drawable/tab_indicator_selector"
            />
    
</RelativeLayout>